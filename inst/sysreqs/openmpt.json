    {
      "packages": ["libopenmpt-dev", "portaudio19-dev"],
      "constraints": [
        {
          "os": "linux",
          "distribution": "ubuntu"
        },
        {
          "os": "linux",
          "distribution": "debian"
        }
      ]
    },
    {
      "packages": ["libopenmpt-devel", "portaudio-devel"],
      "constraints": [
        {
          "os": "linux",
